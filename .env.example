# rlcoach SaaS Environment Configuration
# Copy to .env and fill in values
# NEVER commit .env to git

# =============================================================================
# DATABASE
# =============================================================================
POSTGRES_USER=rlcoach
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD
POSTGRES_DB=rlcoach
DATABASE_URL=postgresql://rlcoach:CHANGE_ME@localhost:5432/rlcoach

# =============================================================================
# REDIS
# =============================================================================
REDIS_URL=redis://localhost:6379

# =============================================================================
# NEXTAUTH (Authentication)
# =============================================================================
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=CHANGE_ME_GENERATE_WITH_OPENSSL
NEXTAUTH_URL=https://rlcoach.gg

# =============================================================================
# OAUTH PROVIDERS
# =============================================================================

# Discord (https://discord.com/developers/applications)
DISCORD_CLIENT_ID=
DISCORD_CLIENT_SECRET=

# Steam (https://steamcommunity.com/dev/apikey)
STEAM_API_KEY=

# Google (https://console.cloud.google.com/apis/credentials)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Epic Games (if available via Epic Developer Portal)
EPIC_CLIENT_ID=
EPIC_CLIENT_SECRET=

# =============================================================================
# STRIPE (Payments)
# =============================================================================
# https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_live_CHANGE_ME
STRIPE_PUBLISHABLE_KEY=pk_live_CHANGE_ME
STRIPE_WEBHOOK_SECRET=whsec_CHANGE_ME

# Pro tier price ID (create in Stripe dashboard)
STRIPE_PRO_PRICE_ID=price_CHANGE_ME

# =============================================================================
# ANTHROPIC (AI Coach)
# =============================================================================
# https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-CHANGE_ME

# =============================================================================
# BACKBLAZE B2 (Backup Storage)
# =============================================================================
# https://secure.backblaze.com/b2_buckets.htm
BACKBLAZE_KEY_ID=
BACKBLAZE_APPLICATION_KEY=
BACKBLAZE_BUCKET_NAME=rlcoach-backups

# =============================================================================
# EMAIL (Transactional - choose one)
# =============================================================================
# Resend (https://resend.com)
RESEND_API_KEY=

# OR Postmark (https://postmarkapp.com)
POSTMARK_API_KEY=

# OR AWS SES
AWS_SES_ACCESS_KEY=
AWS_SES_SECRET_KEY=
AWS_SES_REGION=us-east-1

# From address for emails
EMAIL_FROM=noreply@rlcoach.gg

# =============================================================================
# MONITORING (Optional)
# =============================================================================
# Sentry (https://sentry.io)
SENTRY_DSN=

# =============================================================================
# DEVELOPMENT OVERRIDES
# =============================================================================
# Set to "development" for local dev
NODE_ENV=production
PYTHONUNBUFFERED=1

# =============================================================================
# SECRETS ROTATION
# =============================================================================
# Last rotated: YYYY-MM-DD
# Rotate quarterly or on suspected compromise
# Run: ./scripts/rotate-secrets.sh
